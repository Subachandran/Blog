<%- include("partials/Header") %> 

<!-- Navigation bar -->
<%- include("partials/NavBar") %> 

<div class="container newBlogContainer p-3">
  <form action="/newBlog" method="post" id="newBlogForm" class="form w-75">
    <h2 class="text-center fs-1">Compose</h2>
    <table width="85%">
      <tr class="mb-3">
        <td width="15%" >
          <label for="topic" class="form-label fw-bold">Topic<label>
        </td>
        <td width="85%" >
          <input type="text" name="topic" id="topic" class="newBlogTopic form-control">
        </td>
      </tr>
      <tr class="mb-3">
        <td width="15%" >
          <label for="summary" class="form-label fw-bold">Summary<label>
        </td>
        <td width="85%" >
          <textarea name="summary" id="summary" class=" form-control" cols="30" rows="10"></textarea>
        </td>
      </tr>
      <tr class="mb-3">
        <td width="15%" >
          <label for="content" class="form-label fw-bold">Content<label>
        </td>
        <td width="85%" >
          <textarea name="content" id="content" class=" form-control" cols="30" rows="10"></textarea>
        </td>
      </tr>
      <tr>
        <td width="100%"  colspan=2 class="text-center">
          <input type="submit" value="Post new blog" class="btn">
        </td>
      </tr>
    </table>
  </form>
</div>

<%- include("partials/Footer") %> 